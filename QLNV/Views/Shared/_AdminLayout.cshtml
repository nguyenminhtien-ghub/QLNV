                <button type="button" id="icon-menu-admin" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trang quản trị", "Index", "AdminDashBoard", new { area = "Admin" }, new { @class = "navbar-brand" })
                
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Admin <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        @*<li>
                        <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>*@
                        @*<li>
                        <a href="#"><i class="fa fa-exchange"></i>  Đổi mật khẩu</a>
                        </li>*@
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Tin nhắn</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Cài đặt</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
                            </form>
                        </li>
                    </ul>
                </li>

            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav" id="activeMenu">
                    <li class="active">
                        <a href="@Url.Action("Index", "AdminDashBoard", new { area = "Admin"})"><i class="fa fa-fw fa-dashboard"></i> Tổng quan</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Employee")"><i class="fa fa-fw fa-user"></i> Nhân Viên</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Departments")"><i class="fa fa-tasks"></i> Phòng ban</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Salary")"><i class="fa fa-money"></i> Lương nhân viên</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","EmployeeAwarded")"><i class="fa fa-money"></i> Khen thưởng</a>
                    </li>
                    @*<li>
                    <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i class="fa fa-fw fa-user"></i> MaNhanVien <i class="fa fa-fw fa-caret-down"></i></a>
                    <ul id="demo" class="collapse">
