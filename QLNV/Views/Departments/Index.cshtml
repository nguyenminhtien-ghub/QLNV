@model IEnumerable<QLNV.Models.Department>

@{
    ViewData["Title"] = "Phòng ban";
    Layout = "_AdminLayout";
}


<div class="">
    <div class="">
        <h1 class="page-header">
            Phòng ban
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index", "AdminDashboard", new { area = "Admin"})">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-tasks"></i> Phòng ban
            </li>
        </ol>
    </div>
</div>

<div style="margin:10px">
    <a class="btn btn-primary" href="@Url.Action("Create", "Departments")">
        Thêm phòng ban
    </a>
    <a class="btn btn-primary" href="@Url.Action("EditAllowance", "Departments")">
        Phụ cấp chức vụ
    </a>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr class="success">
                @*<th>Mã phòng ban</th>*@
                <th>Tên phòng ban</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Số phòng ban: @Model.Count()</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {

                    <tr>
                        @*<td>@item.MaPhongBan</td>*@
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Location</td>
                        <td>

                            <a class="btn btn-info  " href="@Url.Action("Details", "Departments", new { @id = @item.Id })"><span aria-hidden="true">Danh sách nhân viên</span> </a>
                            <a class="btn btn-warning" href="@Url.Action("Edit", "Departments", new {@id = @item.Id })"><i class="fa fa-pencil-square-o x5" aria-hidden="true">Sửa</i></a>
                            <a class="btn btn-danger  " href="@Url.Action("Delete", "Departments", new { @id = @item.Id })"><span aria-hidden="true"><i class="fa fa-trash-o">Xóa</i></span> </a>
                        </td>
                    </tr>

                }

            }

        </tbody>
    </table>
</div>