@model QLNV.Models.Department

@{
    ViewData["Title"] = "Cập nhật thông tin phòng ban";
    Layout = "_AdminLayout";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật thông tin phòng ban
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index","AdminDashBoard", new { area = "Admin" })">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-tasks"></i><a href="@Url.Action("Index","Departments")">Phòng ban</a>
            </li>
            <li>
                <i class="fa fa-tasks"></i>Cập nhật thông tin phòng ban
            </li>
        </ol>
    </div>
</div>
<div class="">
    <div class=" col-md-6 col-md-offset-3">
        @Html.AntiForgeryToken()
        <form class="form-horizontal" method="post" role="form">

            <div class="form-group hidden">
                <div class="col-sm-4 control-label">
                    <label>Id</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Id"
                           class="form-control"
                           maxlength="20"
                           value="@Model.Id"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.Id)
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Mã phòng ban</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="DepartmentNumberCode"
                           class="form-control"
                           maxlength="20"
                           value="@Model.DepartmentNumberCode.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.DepartmentNumberCode)
                    </label>

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Tên phòng ban</label>
                </div>
                <div class="col-sm-8">
                    <input type="text" name="Name"
                           class="form-control"
                           maxlength="20"
                           value="@Model.Name.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(n => n.Name)
                    </label>
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Địa chỉ</label>
                </div>

                <div class="col-sm-8">
                    <input type="text" name="Location"
                           class="form-control"
                           maxlength="20"
                           value="@Model.Location.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(model => model.Location)
                    </label>
                    @*@ViewBag.MaNhanVien*@

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 control-label">
                    <label>Số điện thoại</label>
                </div>
                @*@Html.LabelFor(model => model.sdt_PhongBan, new { @class = "control-label col-md-2" })*@
                <div class="col-sm-8">
                    <input type="text" name="Phone"
                           class="form-control"
                           maxlength="20"
                           value="@Model.Phone.Trim()"
                           required />
                </div>
                <div class="col-sm-offset-4 col-sm-5" style="height:15px">
                    <label class="control-label text-danger">
                        @Html.ValidationMessageFor(model => model.Phone)
                    </label>
                    @*@ViewBag.MaNhanVien*@

                </div>
            </div>

            <div class="form-group">
                <div class=" col-sm-offset-4 col-sm-5">
                    <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                </div>
            </div>
        </form>

    </div>
</div>
<div class="clearfix"></div>





