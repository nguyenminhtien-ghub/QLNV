@model List<QLNV.Models.Employee>
@{
    ViewData["Title"] = "Phòng" + ViewBag.DepartmentName;
}

<div class="">
    <div class="">
        <h1 class="page-header">

            Danh sách nhân viên phòng @ViewBag.ten
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index","Admin", new { area = "AdminDashboard" })">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-fw fa-tasks"></i> <a href="@Url.Action("Index","Department")">Phòng ban</a>
            </li>
        </ol>
    </div>
</div>

<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered table-responsive ">
        <thead>
            <tr class="success">
                @*<th>
                Mã nhân viên
                </th>*@
                <th>
                    Họ tên
                </th>
                @*<th>
                Hình ảnh
                </th>*@
                <th>
                    Giới tính
                </th>
                <th>
                    Số điện thoại
                </th>

                <th>
                    Chức vụ
                </th>
                <th>
                    Chuyên ngành
                </th>
                <th>
                    Học vấn
                </th>

                <th>Số nhân viên: @Model.Count()</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                @item.MaNhanVien
                @Html.DisplayFor(modelItem => item.MaNhanVien)
                </td>*@

                    <td>

                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    @*<td>

                <img src="@Url.Content("~/Content/images/" + item.HinhAnh)" height="70" />

                </td>*@
                    <td>
                        @{
                            int gender = int.Parse(@Html.DisplayFor(modelItem => item.Gender).ToString());
                            String x = string.Empty;
                            switch (gender)
                            {
                                case 1: x = "Nam"; break; ;
                                case 0: x = "Nữ"; break;
                                default: x = "Khác"; break;
                            }
                        }
                        @x
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeePosition.PositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EductionStatus.MajorName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EductionStatus.EducationName)
                    </td>
                    <td>
                        @*<a class="btn btn-primary" href="@Url.Action("ChuyenNhanVien", "KhenThuong", new { @id = @item.MaNhanVien })">Khen thưởng</a>*@
                        <a class="btn btn-info" href="@Url.Action("Index", "Employee", new { @id = @item.Id })">Quá trình công tác</a>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Departments", new { @id = @item.Id })">Chuyển nhân viên</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


