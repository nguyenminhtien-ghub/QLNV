@model IEnumerable<QLNV.Models.SalaryModifiHistory>

@{
    ViewBag.Title = "Quá trình";
    Layout = "_AdminLayout";
}

<div class="">
    <div class="">
        <h1 class="page-header">
            Cập nhật bảng lương nhân viên
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index", "AdminDashboard", new { area = "Admin" })">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-money"></i> <a href="@Url.Action("Index", "Salary")">Lương</a>
            </li>
            <li>
                <i class="fa fa-money"></i> Quá trình lương
            </li>
        </ol>
    </div>
</div>
<div class="table-responsive">
    <table id="table-taikhoan" class="table  table-striped table-hover table-bordered ">
        <thead>
            <tr class="success">
                <th>
                    Mã nhân viên
                </th>
                <th>
                    Lương trước khi cập nhật
                </th>
                <th>
                    Lương sau khi cập nhật
                </th>

                <th>
                    Bảo hiểm
                </th>
                <th>
                    Hệ số lương
                </th>
                <th>
                    Thuế thu nhập
                </th>
                <th>
                    Ngày áp dụng
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary.EmployeeId)
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.OldSalary).Replace(",", ",")
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.NewSalary).Replace(",", ",")

                    </td>
                    <td>
                        @*@string.Format("{0:#,#}", @item.BHXH).Replace(",", ",")*@
                        <table class="table table-bordered">
                            <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                            <tr>
                                <td>@item.SocialInsurance</td>
                                <td>@item.HealthInsurance</td>
                                <td>@item.UnemploymentInsurance</td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        @item.Coefficients
                        @*@string.Format("{0:#,#}", @item.PhuCap).Replace(",", ",")*@
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.IncomeTax).Replace(",", ",")
                    </td>
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", @item.ModifiDate)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
