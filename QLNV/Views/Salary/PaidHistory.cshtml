@model IEnumerable<QLNV.Models.SalaryDetail>
@{
    ViewBag.Title = "Danh sách nhận lương";
    Layout = "_AdminLayout";
}


<div class="">
    <div class="">
        <h1 class="page-header">
            Danh sách Lương nhân viên
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index", "AdminDashboard", new { area = "Admin"})">Tổng quan</a>
            </li>
            <li>
                <i class="fa fa-money"></i> <a href="@Url.Action("Index","Salary")"> Lương</a>
            </li>
        </ol>
    </div>
</div>

<div class="table-responsive">
    <table id="table-taikhoan" class="table table-striped table-hover table-bordered ">
        <thead>
            <tr class="success">
                <th>
                    Mã nhân viên
                </th>

                <th>
                    Lương cơ bản
                </th>
                <th>
                    Bảo hiểm
                </th>
                <th>
                    Phụ cấp
                </th>
                <th>
                    Thuế thu nhập
                </th>
                @*<th>
                Tiền thưởng
                </th>
                <th>
                Tiền phạt
                </th>*@
                <th>
                    Ngày nhận lương
                </th>
                <th>
                    Thực lãnh
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>

                    <td>
                        @string.Format("{0:#,#}", @item.BaseSalary).Replace(",", ",")

                    </td>
                    <td>
                        <table class="table table-bordered">
                            <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                            <tr>
                                <td>@string.Format("{0:#,#}", @item.SocialInsurance).Replace(",", ",")</td>
                                <td>@string.Format("{0:#,#}", @item.HealthInsurance).Replace(",", ",")</td>
                                <td>@string.Format("{0:#,#}", @item.UnemploymentInsurance).Replace(",", ",")</td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.Allowance).Replace(",", ",")

                    </td>
                    <td>
                        @string.Format("{0:#,#}", @item.IncomeTax).Replace(",", ",")

                    </td>
                    
                    <td>
                        @String.Format("{0:dd/MM/yyyy}", @item.PaidDate)
                    </td>
                    <td>
                        
                        @String.Format("{0:#,#}", item.Total).Replace(",", ",")
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>