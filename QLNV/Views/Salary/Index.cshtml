﻿@{
    ViewBag.Title = "Lương nhân viên";
    Layout = "_AdminLayout";
}

@model IEnumerable<QLNV.Models.Salary>

<div class="container-fluid">
    <div class="">
        <div class="">
            <h1 class="page-header">
                Lương nhân viên
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="@Url.Action("Index","AdminDashboard", new { area = "Admin" })">Tổng quan</a>
                </li>
                <li>
                    <i class="fa fa-money"></i> Lương
                </li>
            </ol>
        </div>
    </div>

    <div style="margin:10px">

        <a class="btn btn-primary" href="@Url.Action("PaidHistory", "Salary")">Danh sách nhận lương</a>
        
    </div>
    <div class="table-responsive">
        <table id="table-taikhoan" class="table  table-striped table-hover table-bordered ">
            <thead>
                <tr class="success">
                    <th>Mã nhân viên</th>
                    <th>Lương tối thiểu</th>
                    <th>Hệ số lương</th>
                    <th>Phụ cấp CV</th>
                    <th>Tiền bảo hiểm</th>
                    <th>Thuế (%)</th>
                    <th>Số bảng lương: @Model.Count()</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Employee.Id</td>
                            <td>
                                @string.Format("{0:#,#}", @item.MinimumSalary).Replace(",", ",")
                            </td>
                            <td>
                                @item.Coefficients
                            </td>
                            <td>
                                @item.Allowance
                            </td>
                            <td>
                                <table class="table table-bordered">
                                    <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                                    <tr>
                                        <td>@item.SocialInsurance</td>
                                        <td>@item.HealthInsurance</td>
                                        <td>@item.UnemploymentInsurance</td>
                                    </tr>
                                </table>

                            </td>
                            <td>
                                @string.Format("{0:#,#}", @item.IncomeTax).Replace(",", ",")
                            </td>
                            <td>
                                <a class="btn btn-warning" href="@Url.Action("Edit", "Salary", new { @id = @item.Employee.Id })"><i class="fa fa-pencil-square-o x5" aria-hidden="true"></i>Sửa</a>
                                <a class="btn btn-info" href="@Url.Action("Payroll", "Salary", new { @id = @item.Employee.Id })">Tính lương</a>
                                <a class="btn btn-primary" href="@Url.Action("Index", "Salary", new  {@id = @item.Employee.Id })">Quá trình lương</a>

                            </td>
                        </tr>

                    }

                }

            </tbody>
        </table>
    </div>

</div>